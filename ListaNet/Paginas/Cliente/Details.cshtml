@page
@model ListaNet.Paginas.Cliente.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Enrollments)
        </dt>
        <dd class="col-sm-10"
               <table class="table">
                   <tr>
                       <th> Servico Title</th>
                       <th>Grade</th>
                   </tr>
                   @foreach (var item in Model.Produto.Enrollments)
                   {
                       <tr>
                           <td>
                               @Html.DisplayFor(modelItem => item.Produtos.Id)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Grade)
                           </td>
                       </tr>
                   }
               </table>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Produto?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
